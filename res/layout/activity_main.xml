<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundsecure"
    android:focusable="true"
    android:textAlignment="center" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="574dp" >

            <TextView
                android:id="@+id/textViewx"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="General"
                android:textColor="#C0C0C0"
                android:textSize="17dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textViewx"
                android:background="@drawable/buttongraph"
                android:layout_margin="5dp"
                android:checked="false" />

            <Button
                android:id="@+id/screentext"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/background"
                android:layout_margin="5dp"
                android:background="@drawable/buttongraph"
                android:fontFamily="Condensed bold-italic"
                android:gravity="center_vertical|center_horizontal"
                android:text="Set lockscreen text"
                android:textColor="#000000" />

            <Button
                android:id="@+id/screentextcolor"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/screentext"
                android:layout_margin="5dp"
                android:background="@drawable/buttongraph"
                android:fontFamily="Bold-italic"
                android:gravity="center_vertical|center_horizontal"
                android:text="Set text color"
                android:textColor="#000000" />

            <Button
                android:id="@+id/help"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/screentextcolor"
                android:layout_margin="5dp"
                android:background="#F0F0F0"
                android:gravity="center_vertical"
                android:text=" Help"
                android:textColor="#000000"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/help"
                android:gravity="center"
                android:text="Emergency"
                android:textColor="#FF0000"
                android:textSize="17dp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/lat"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/donate"
                android:gravity="center"
                android:text="Latitude"
                android:textColor="#000000"
                android:textSize="17dp"
                android:textStyle="bold"
                android:visibility="invisible" />
            <TextView
                android:id="@+id/Alt"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/lat"
                android:gravity="center"
                android:text="Altitude"
                android:textColor="#000000"
                android:textSize="17dp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <Button
                android:id="@+id/about"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView3"
                android:layout_margin="5dp"
                android:background="#F0F0F0"
                android:gravity="center_vertical"
                android:text=" About Pi Locker"
                android:textColor="#000000"
                android:visibility="invisible" />

            <Button
                android:id="@+id/aboutpi"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/about"
                android:layout_margin="5dp"
                android:background="#F0F0F0"
                android:gravity="center_vertical"
                android:text=" About Pi Developers"
                android:textColor="#000000"
                android:visibility="invisible" />

            <Button
                android:id="@+id/donate"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/aboutpi"
                android:layout_margin="5dp"
                android:background="#F0F0F0"
                android:gravity="center_vertical"
                android:text=" Donate to us "
                android:textColor="#000000"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/start"
                android:layout_alignBottom="@+id/start"
                android:layout_alignLeft="@+id/start"
                android:layout_marginLeft="43dp"
                android:text="Toggle SecureMi"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="italic" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="1px"
                android:layout_height="1px"
                android:layout_alignLeft="@+id/background"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/TextView1"
                android:layout_marginTop="21dp" >

                <RadioButton
                    android:id="@+id/radio0"
                    android:layout_width="1px"
                    android:layout_height="1px"
                    android:checked="true"
                    android:onClick="onRadioButtonClicked"
                    android:text="Hide" />

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="1px"
                    android:layout_height="1px"
                    android:onClick="onRadioButtonClicked"
                    android:text="Show" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/button2"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="Settings"
                android:textColor="#C0C0C0"
                android:textSize="17dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/start"
                android:layout_below="@+id/start"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="1px"
                android:layout_height="1px"
                android:layout_alignBaseline="@+id/checkBox1"
                android:layout_alignBottom="@+id/checkBox1"
                android:layout_alignLeft="@+id/textView1"
                android:text="Secret Emergency unlock"
                android:textColor="#000000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/background"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView2"
                android:layout_margin="5dp"
                android:background="@drawable/buttongraph"
                android:fontFamily="Condensed bold-italic"
                android:gravity="center_vertical|center_horizontal"
                android:text="Set Background"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="743325dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView1"
                android:gravity="center"
                android:text=" SecureMi"
                android:textColor="#C0C0C0"
                android:textSize="17dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/set"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView6"
                android:background="@drawable/buttongraph"
                android:focusable="false"
                android:fontFamily="Bold-italic"
                android:gravity="center_vertical"
                android:text="          Set SecureMi Passcode"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button1"
                android:layout_width="1px"
                android:layout_height="1px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/set"
                android:background="#F0F0F0"
                android:gravity="center_vertical"
                android:textColor="#000000" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/button1"
                android:background="@drawable/buttongraph"
                android:fontFamily="Segoe UI Light"
                android:gravity="center_vertical"
                android:text="          Reset SecureMi"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TextView1"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/button2"
                android:background="#ffffff"
                android:gravity="center"
                android:text="	StatusBar"
                android:textColor="#000000"
                android:textSize="17dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>